{
  "name": "@re-shell/cli",
  "version": "0.7.0",
  "description": "Comprehensive CLI tool for Re-Shell microfrontend framework with health diagnostics, bundle analysis, CI/CD generation, and code scaffolding",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "bin": {
    "re-shell": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "lint": "eslint src --ext ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "microfrontend",
    "react",
    "re-shell",
    "cli",
    "framework",
    "micro-frontend",
    "monorepo",
    "bundle-analysis",
    "health-check",
    "cicd",
    "code-generation",
    "performance",
    "security",
    "migration-tools"
  ],
  "author": "Re-Shell Organization",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Re-Shell/cli.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^10.4.5",
    "ora": "^5.4.1",
    "prompts": "^2.0.0",
    "semver": "^7.7.2",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.17.46",
    "@types/prompts": "^2.0.0",
    "@types/semver": "^7.7.0",
    "@types/uuid": "^9.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.0",
    "vitest": "^0.34.3"
  }
}
